<p style="color: green"><%= notice %></p>

<div class="container container-fluid ">
  <h1 class="text-white text-center" style="font-size: 40px">Accounts</h1>

  <table class="table-striped table table-bordered text-white">
    <thead class="thead-dark">
      <tr>
        <th scope="col">AccountID</th>
        <th scope="col">FirsttName</th>
        <th scope="col">LastName</th>
        <th scope="col">Email</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <th scope="row"><%= account.id %></th>
          <td><%= account.first_name %></td>
          <td><%= account.last_name %></td>
          <td><%= account.email %></td>
          <td><%= link_to "Show this account", account, class: "btn btn-dark" %></td>
        </tr>
      <% end %>
    </tbody>
    </table><br><br><br><r>

  <%= link_to "New account", new_account_path, class: "btn btn-dark" %>
</div>