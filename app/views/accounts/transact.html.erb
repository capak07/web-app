<br><br><div class="container bg-dark pb-3 height-100px"> ">
    <div class= "card-text-center bg-dark">
        <div class="container bg pt-2 pb-1 ">
            <div class="card-header">
            <h5 class="my-0 font-weight-bold bg-light text-color-blue text-center">Deposit Transaction</h5>
            </div>
        </div>    
        <ul class="list-group list-group-justified bg-blue">
            <%= form_with(model: @account, url: deposit_account_path ) do |form |%>
                <li class="list-group-item"><div class="mb-3">
                    <%= form.label :Enter_Amount, class: "text text-color-dark"%>
                    <%= form.text_field :balance, class: "form-control",id: "C", placeholder: "0.0" %>
                </div></li>
                <li class="list-group-item text-center"><div class="mb-3 bg-dark pb-2 pt-2">
                    <%= form.submit "Credit", class: "btn btn-dark bg-primary"%>
                </div></li>
            <% end %>
        </ul><br>
    </div><br><br>

     <div class= "card-text-center bg-dark">
        <div class="container bg pt-2 pb-1 ">
            <div class="card-header">
            <h5 class="my-0 font-weight-bold bg-light text-center">Withdraw Transaction</h5>
            </div>
        </div>    
        <ul class="list-group list-group-justified">
            <%= form_with(model: @account, url: withdraw_account_path ) do |form |%>
                <li class="list-group-item bg"><div class="mb-3">
                    <label class="label-primary"><strong>Account Balance: </strong></label>
                    <strong class="mb-3"><%= @account.balance %>$</strong>
                </div></li>
                <li class="list-group-item"><div class="mb-3">
                    <%= form.label :Enter_Amount, class: "text text-color-dark"%>
                    <%= form.text_field :balance, class: "form-control",id: "C", placeholder: "0.0" %>
                </div></li>
                <li class="list-group-item text-center"><div class="mb-3 bg-dark pb-2 pt-2">
                    <%= form.submit "Debit", class: "btn btn-dark bg-primary"%>
                </div></li>
            <% end %>
        </ul><br>
    </div><br>

    <div class="container bg-light">
        <div class="card-body text-center">
            <%= link_to "Back to Account", account_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>


